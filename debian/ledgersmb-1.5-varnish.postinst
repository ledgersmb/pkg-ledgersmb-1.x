#!/bin/sh
# postinst script for ledgersmb-1.5
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

##  Set old_version variable for use later in the script.
#old_version=$2

case "$1" in
    configure)
        # Do varnish related processing if it is present.
        if [ -d "/etc/varnish" ]; then
            [ -d /etc/varnish/sites-available/ ] && [ ! -e /etc/varnish/sites-available/ledgersmb-1.5-proxy.conf ] && ucf /usr/share/ledgersmb-1.5/conf/varnish-vhost.conf /etc/varnish/sites-available/ledgersmb-1.5-proxy.conf
            # Enable varnish proxy configuration 
            if [ ! -h /etc/varnish/ledgersmb-1.5-proxy.conf ] ; then
                ln -s /etc/varnish/ledgersmb-1.5-proxy.conf /etc/varnish/sites-enabled/ledgersmb-1.5-proxy.conf
                if which varnish >/dev/null 2>&1; then
                    varnish -s reload
                fi
            fi
            [ ! -h /etc/ledgersmb-1.5/varnish-proxy.conf ] && ln -s /etc/varnish/default.vcl /etc/ledgersmb-1.5/varnish-proxy.conf
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
